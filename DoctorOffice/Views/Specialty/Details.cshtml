@using DoctorOffice.Models;
@{
  Layout = "_Layout";
}
<title>Specialty details</title>
<div class="container">
  <h1>Doctor Office</h1>
  <h1>Specialty details</h1>
  <h2>Specialty: @Model["specialty"].GetDescription()</h2>
  <hr />
  @if (@Model["specialtyDoctors"].Count != 0)
  {
    <h4>This specialty includes the below doctors:</h4>
    <ul>
    @foreach (Doctor doctor in @Model["specialtyDoctors"])
    {
      <li>@doctor.GetName()  <a href="/doctors/@doctor.GetId()/update">Edit</a> | <a href="/doctors/@doctor.GetId()/delete">Delete</a></li>
    }
    </ul>
  }
  <h4>Add a doctor to this specialty:</h4>
  <form action='/specialtys/@Model["specialty"].GetId()/doctors/new' method='post'>
    <label for='doctor-id'>Select a doctor</label>
    <select id='doctor-id' name='doctor-id' type='text'>
      @foreach (var doctor in @Model["allDoctors"])
      {
        <option value='@doctor.GetId()'>@doctor.GetName()</option>
      }
    </select>
    <button type='submit'>Add</button>
  </form>
  <h4><a href='/doctors/new/@Model["specialty"].GetId()'>Add a new doctor</a></h4>
  <p><a href="/">Return to Main Page</a></p>
</div>
