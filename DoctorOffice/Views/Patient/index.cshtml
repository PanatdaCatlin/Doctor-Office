@{
  Layout = "_Layout";
}
<title>Patient index</title>

<div class="container">
  <h1>Doctor Office</h1>
  <h1>Patient index</h1>
  <hr />
  <h2>Patients:</h2>
  @if (Model.Count != 0)
  {
    <ul>
    @foreach (var patient in Model)
    {
      <li><a href='/patients/@patient.GetId()'>@patient.GetName() | @patient.GetBirthDate()</a>         <a href="/patients/@patient.GetId()/update">Edit</a> | <a method="post" href="/patients/@patient.GetId()/delete">Delete</a></li>
    }
    </ul>
  }
  <h4><a href="/patients/new">Add new patient</a></h4>
  <h4><a href="/">Return home</a></h4>
</div>
